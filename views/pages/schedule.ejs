
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="">
    <header><%- include('../partials/header'); %></header>

    <main>
        <div class="schedule-content">
            <div class="schedule-container">
                <div class="row1">
        
                    <div class="next">
                        <h1 class="title">TRẬN KẾ TIẾP</h1>
                        <h2 class="fight">97plus - <%= nextMatch[0].competitionName %> </h2>
                        <div class="giaohuu">
                            <img src="../access/giaohuu.png" alt="">
                            <% if (!nextMatch[0].IDseason) { %>
                            <p>Giao hữu</p>
                            <% } else { %>
                                <p><%= nextMatch[0].nameSeason %></p>
                                <% } %>
                        </div>
        
                        <div class="time-place">
        
                            <div class="time">
                                <img src="../access/i1.png" alt="">
                                <p><%= nextMatch[0].start %>h-<%= nextMatch[0].end %>h</p>
                                <p><%= nextMatch[0].day %>-<%= nextMatch[0].month %>-<%= nextMatch[0].year %></p>
                            </div>
        
                            <div class="place">
                                <img src="../access/i2.png" alt="">
                                <p><%= nextMatch[0].fieldName %></p>
                            </div>
        
                        </div>
        
                    </div>
        
                    <div class="result">
                        <h1 class="title">KẾT QUẢ</h1>
                        <div class="detail">
        
                            <% lastMatch.forEach(match => { %>
                                <div class="row-result">
                                    <img src="../access/cuppng.png" class="prize" alt="">
                                    <div class="information">
                                        <p><%= match.nameSeason %> </p>
                                        <p style="font-weight: 600; font-size: 12pt;">12/4/2022 - 17:00</p>
                                        <p><%= match.fieldName %></p>
                                    </div>
                                    <div class="score">
                                        <p class="team-football">97plus</p>
                                        <p class="score-match"><%= match.Result %></p>
                                        <p class="team-football"><%= match.competitionName %></p>
                                    </div>
                                </div>
                            <% }) %>
                            </div>
        
                        </div>
                        
                    </div>
                </div>
                <div class="row2">  
                    <div class="schedule">
                        <h1 class="title">LỊCH TRỐNG</h1>
                        <div class="training-schedule">
                            <% trainMatch.forEach(match => { %>
                                <div class="practice">
                                    <img src="../access/tapluyen.png" alt="">
                                    
                                        <div class="information">
                                            <p style="color: brown; font-weight: 600;">Tập luyện</p>
                                            <p style="font-weight: 600; font-size: 12pt;"><%= match.day %>/<%= match.month %>/<%= match.year %> - <%= match.hour %>:00</p>
                                            <p><%= match.fieldName %></p>
                                        </div>
                                        <div class="ex">
                                            <% match.context.split(".").forEach(element => { %>
                                                <p><%= element %>.</p>
                                            <% }) %>
                                        </div>
                                </div>
                            <% }) %>
                            <div class="book">
                                    <% emptyMatch.forEach(match => { %>
                                        <div class="book-col">
                                        <div class="box">
                                            <img src="../access/Datlich.jpg" alt="">

                                            <div class="book-time">
                                                <p><%= match.day %>/<%= match.month %>/<%= match.year %> </p>
                                                <p><%= match.dayname %></p>
                                            </div>
                                            <button class="button-js">HẸN</button .button-js   >
                                        </div>  
                                    </div>
                                    <% }) %>
                            </div>
        
                        </div>
                    </div>
                </div>
        
            </div>
            
        </div>
        
        <div class="modal js-modal">
            <div class="modal-container">
        
                <div class="modal-close js-modal-close"> 
                    <i class="ti-close"></i>
                </div>
        
                <div class="modal-header">
                    <img src="../access/modal-icon.png" alt="">
                    <p>Hẹn giao hữu</p>
                </div>
        
                <div class="modal-body">
        
                    <label for="" class="modal-label">
                        Họ và tên
                    </label>
                    <input type="text" class="modal-input" placeholder="Nguyễn Văn A">
        
                    <label for="" class="modal-label">
                        Tên đội bóng
                    </label>
                    <input type="text" class="modal-input" placeholder="97plus">
        
                    <label for="" class="modal-label">
                        Link Facebook
                    </label>
                    <input type="text" class="modal-input" placeholder="https://www.facebook.com/97plus">
        
                    <label for="" class="modal-label">
                        Số điện thoại liên lạc
                    </label>
                    <input type="text" class="modal-input" placeholder="0987654321">
        
                    <button class="modal-button modal-button-js" >Hẹn</button>
        
                </div>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>


